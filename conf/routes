# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.PersonController.index
POST    /person                     controllers.PersonController.addPerson
GET     /persons                    controllers.PersonController.getPersons
#GET     /card/create                controllers.HomeController.createCard
#POST    /card/save 		             controllers.HomeController.saveCard
#POST    /card/move                  controllers.HomeController.moveCard
GET     /kanbanBoard                controllers.BoardController.all

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
